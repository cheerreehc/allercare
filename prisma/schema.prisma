generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id // LINE userId
  firstName   String     // ชื่อต้น
  lastName    String     // นามสกุล
  hn          String?    // HN ยังคงเป็น Optional ได้ (เผื่อผู้ป่วยใหม่ยังไม่มี)
  pdpaConsent Boolean    @default(false)
  createdAt   DateTime   @default(now())
  logs        DailyLog[]
}

model DailyLog {
  id         Int      @id @default(autoincrement())
  userId     String
  user       User     @relation(fields: [userId], references: [id]) // เชื่อมกลับไปที่ User
  logDate    DateTime @db.Date
  whealScore Int
  itchScore  Int
  totalScore Int
  note       String?  @db.Text
  createdAt  DateTime @default(now())

  @@index([userId, logDate])
}